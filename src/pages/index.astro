---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    name: "Coral",
    emoji: "ü™∏",
    description: "Proto dependency visualizer for gRPC/Connect projects with Neon-style interactive Web UI.",
    tech: ["Rust", "React", "Axum", "React Flow"],
    github: "https://github.com/daisuke8000/coral",
    demo: "https://daisuke8000.github.io/coral/",
    color: "cyan",
  },
  {
    name: "mbr-cli",
    emoji: "üñ•Ô∏è",
    description: "CLI/TUI tool for Metabase API interaction. Operate your data analytics platform from the terminal.",
    tech: ["Rust", "Tokio", "Ratatui", "Clap"],
    github: "https://github.com/daisuke8000/mbr-cli",
    color: "magenta",
  },
];

const techStack = [
  { name: "Rust", category: "lang" },
  { name: "Go", category: "lang" },
  { name: "TypeScript", category: "lang" },
  { name: "Python", category: "lang" },
  { name: "React", category: "frontend" },
  { name: "Next.js", category: "frontend" },
  { name: "Docker", category: "infra" },
  { name: "Kubernetes", category: "infra" },
  { name: "Terraform", category: "infra" },
];
---

<Layout title="Daisuke | Software Engineer">
  <main>
    <section class="hero">
      <div class="container">
        <h1>
          <span class="greeting">Hi, I'm</span>
          <span class="name">Daisuke</span>
        </h1>
        <p class="tagline">Software Engineer building developer tools with Rust</p>
        <div class="links">
          <a href="https://github.com/daisuke8000" class="link-btn" target="_blank" rel="noopener">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
        </div>
      </div>
    </section>

    <section class="projects">
      <div class="container">
        <h2 class="section-title">Featured Projects</h2>
        <div class="project-grid">
          {projects.map((project) => (
            <article class={`project-card ${project.color}`}>
              <div class="project-header">
                <span class="project-emoji">{project.emoji}</span>
                <h3>{project.name}</h3>
              </div>
              <p class="project-description">{project.description}</p>
              <div class="project-tech">
                {project.tech.map((t) => (
                  <span class="tech-tag">{t}</span>
                ))}
              </div>
              <div class="project-links">
                <a href={project.github} target="_blank" rel="noopener">
                  Repository ‚Üí
                </a>
                {project.demo && (
                  <a href={project.demo} target="_blank" rel="noopener" class="demo-link">
                    Live Demo ‚Üí
                  </a>
                )}
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="tech">
      <div class="container">
        <h2 class="section-title">Tech Stack</h2>
        <div class="tech-list">
          {techStack.map((t) => (
            <span class={`tech-item ${t.category}`}>{t.name}</span>
          ))}
        </div>
      </div>
    </section>

    <footer>
      <div class="container">
        <p>&copy; {new Date().getFullYear()} Daisuke. Built with Astro.</p>
      </div>
    </footer>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Hero */
  .hero {
    padding: 6rem 0 4rem;
    text-align: center;
  }

  .greeting {
    display: block;
    font-size: 1.25rem;
    color: var(--text-secondary);
    font-weight: 400;
  }

  .name {
    display: block;
    font-size: 3.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--accent-cyan), var(--accent-magenta));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tagline {
    margin-top: 1rem;
    font-size: 1.25rem;
    color: var(--text-secondary);
  }

  .links {
    margin-top: 2rem;
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .link-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--bg-card);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: var(--text-primary);
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .link-btn:hover {
    border-color: var(--accent-cyan);
    box-shadow: var(--glow-cyan);
    text-shadow: none;
  }

  /* Section */
  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 2rem;
    color: var(--text-primary);
  }

  /* Projects */
  .projects {
    padding: 4rem 0;
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .project-card {
    background: var(--bg-card);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  .project-card.cyan:hover {
    border-color: var(--accent-cyan);
    box-shadow: var(--glow-cyan);
  }

  .project-card.magenta:hover {
    border-color: var(--accent-magenta);
    box-shadow: var(--glow-magenta);
  }

  .project-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .project-emoji {
    font-size: 1.5rem;
  }

  .project-header h3 {
    font-size: 1.25rem;
    font-weight: 600;
  }

  .project-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tech-tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
    color: var(--text-secondary);
  }

  .project-links {
    display: flex;
    gap: 1rem;
  }

  .project-links a {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .cyan .project-links a { color: var(--accent-cyan); }
  .magenta .project-links a { color: var(--accent-magenta); }

  /* Tech Stack */
  .tech {
    padding: 4rem 0;
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tech-item {
    padding: 0.5rem 1rem;
    background: var(--bg-card);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 6px;
    font-size: 0.875rem;
    transition: all 0.2s ease;
  }

  .tech-item:hover {
    border-color: var(--accent-cyan);
  }

  .tech-item.lang { color: var(--accent-cyan); }
  .tech-item.frontend { color: var(--accent-magenta); }
  .tech-item.infra { color: var(--accent-yellow); }

  /* Footer */
  footer {
    padding: 3rem 0;
    text-align: center;
    color: var(--text-secondary);
    font-size: 0.875rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .name {
      font-size: 2.5rem;
    }

    .project-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
